<%- include ('partials/header')%>

<h1>Movies with keyword "<%= keyword%>"</h1>
<div class="container">
    <% if(results['Response']==='True'){ %>
        <% movieDetails.forEach((data)=>{ %>
            <div class="card">
                <div class="card-image-box">
                    <img class="card-image" src="<%= data['Poster']%>">
                </div>
                <div class="card-description">
                    <p class="card-title"><%= data['Title'].substring(0,45)%></p>
                    <p class="card-rating">Rating: <%= data['imdbRating']%></p>
                    <p class="card-plot"><%= data['Plot'].substring(0,80)%>...</p>  
                    <p class="heart"><i class="far fa-heart">  500</i></p> 
                </div>
                
                
            </div>
        <% }); %>
    <% } else{ %>
        <h1>No Movies Found</h1>
    <% } %>
    
</div>

<a href="/">Search Again!</a>
    


<%- include ('partials/footer')%>
